
<div class="outer-box">
    <div class="inner-box @side">
        @for (int col = 0; col < 8; col++)
        {
            @for (int row = 0; row < 8; row++)
            {
                <div class="square @GetColour(col, row)">
                    <p>
                        @if(side == "white")
                        {
                            @if (row == 0)
                            {
                                @ToChar(col)
                            }
                            @if (col == 0)
                            {
                                @(row + 1)
                            }
                        } else
                        {
                            @if (row == 7)
                            {
                                @ToChar(col)
                            }
                            @if (col == 7)
                            {
                                @(row + 1)
                            }
                        }
                    </p>
                </div>
            }
        }
    </div>
</div>


@code {
    private string side = "white"; 

    private string GetColour(int col, int row )
    {
        if ((row + col) % 2 == 0)
        { 
            return "dark";
        }
        else
        {
            return "light";
        }
    }

    private char ToChar(int col)
    {
        return (char)(col + (int)'a');
    }
}
