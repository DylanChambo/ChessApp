@using ChessApp.Data;

 <div class="square @GetColour(file, rank)">
    <p class="file-letter">
        @if ((rank == 0 && side == "white") || (rank == 7 && side == "black"))
            {
                @ToChar(file)
            }    
    </p>
    <p class="rank-num">
        @if ((file == 0 && side == "white") || (file == 7 && side == "black"))
            {
            @(rank + 1)
            }
    </p>
    <h1>&#x2654; @piece</h1>
</div>

@code {
    [Parameter]
    public int file { get; set; }

    [Parameter]
    public int rank { get; set; }

    [Parameter]
    public Piece piece { get; set; }

    [Parameter]
    public string? side { get; set; }

    private string GetColour(int file, int rank)
    {
        if ((rank + file) % 2 == 0)
        {
            return "dark";
        }
        else
        {
            return "light";
        }
    }

    private char ToChar(int file)
    {
        return (char)(file + (int)'a');
    }
}
